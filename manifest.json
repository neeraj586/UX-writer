{
    "manifest_version": 3,
    "name": "Capillary UX Writer",
    "version": "1.5",
    "description": "AI-powered UX writing assistant for Capillary Technologies.",
    "permissions": [
        "storage",
        "activeTab",
        "contextMenus",
        "clipboardRead"
    ],
    "host_permissions": [
        "https://api.groq.com/*"
    ],
    "commands": {
        "show-ux-writer": {
            "suggested_key": {
                "default": "Ctrl+Shift+X",
                "mac": "Command+Shift+X"
            },
            "description": "Open Capillary UX Writer"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "keys.js",
                "docs_context.js",
                "content.js"
            ],
            "css": [
                "inject.css"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}